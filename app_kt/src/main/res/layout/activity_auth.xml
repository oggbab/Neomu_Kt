<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6981EC"
    android:orientation="vertical"
    tools:context=".app.main.AuthActivity">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/iv_logo" />

    <TextView
        style="@style/tv_auth_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_auth_linktext"
            style="@style/main_linkText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <com.google.android.gms.common.internal.SignInButtonImpl
            android:id="@+id/btn_auth_google"
            style="@style/main_loginBtn_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="구글 로그인" />


        <Button
            android:id="@+id/btn_auth_join"
            style="@style/main_loginBtn"
            android:backgroundTint="#FBCE02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_btn"
            android:layout_marginTop="20dp"
            android:text="회원 가입" />

    </LinearLayout>

</LinearLayout>