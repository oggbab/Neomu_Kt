<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/tv_postPrice"
        style="style/club_new_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/check_background"
        android:fontFamily="@font/sans_r"
        android:gravity="center_vertical"
        android:text="#홍대입구역"
        android:textColor="#AFB7C2"
        android:textSize="10sp"
        tools:text="#2만원" />

    <TextView
        android:id="@+id/tv_postPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        tools:text="3명"
        android:fontFamily="@font/sans_r"
        style="style/club_new_title"
        android:textColor="#AFB7C2"
        android:layout_centerInParent="true"
        android:background="@drawable/check_background"
        android:textSize="10sp"
        android:text="#3명"
        />

    <TextView
        android:id="@+id/tv_postLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        tools:text="홍대입구역"
        android:fontFamily="@font/sans_r"
        style="style/club_new_title"
        android:textColor="#AFB7C2"
        android:layout_centerInParent="true"
        android:background="@drawable/check_background"
        android:textSize="10sp"
        android:text="#홍대입구역"
        />

</LinearLayout>
