<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">#7161FA</item>
        <item name="colorControlHighlight">#7161FA</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#000000</item>
        <item name="android:src">@drawable/ic_menu</item>
    </style>

    <!--메인 타이틀-->
    <style name="main_title">
        <item name="android:text">너\u0026무</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/serif_b</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginTop">-30dp</item>
        <item name="android:layout_marginBottom">-30dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="login_title">
        <item name="android:text">너\u0026무</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/serif_b</item>
        <item name="android:textSize">50dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginTop">-30dp</item>
        <item name="android:layout_marginBottom">-30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
    </style>

    <!--메인 서브 타이틀-->
    <style name="sub_title">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/serif_b</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--인풋창(에딧텍스트) 기본-->
    <style name="main_edittext">
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
        <item name="android:textColor">#353b81</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/serif_b</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLength">20</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--링크 텍스트-->
    <style name="main_linkText">
        <item name="android:text">회원이 아니신가요? JOIN</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/serif_b</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:linksClickable">true</item>
    </style>

    <!--버튼 로그인-->
    <style name="main_loginBtn">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/sans_r</item>
        <item name="android:height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!--버튼 회원가입-->
    <style name="main_joinBtn">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/sans_r</item>
        <item name="android:height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#FBCE02</item>
    </style>

    <!--버튼 구글 로그인 -->
    <style name="main_loginBtn_google">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/sans_r</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/round_btn_google</item>
        <item name="android:textColor">#252837</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawableLeft">@drawable/google</item>
        <item name="android:drawablePadding">-50dp</item>
    </style>


    <!--라디오버튼-->
    <style name="radio">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/serif_b</item>
        <item name="android:textColor">#252837</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>


    <!--칩 스타일-->

    <style name="chip_style">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/sans_b</item>
        <item name="android:textColor">#252837</item>
        <item name="android:colorAccent" tools:ignore="NewApi">#FBCE02</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
    </style>

    <!--회원가입 카테고리 텍스트-->
    <style name="main_category_text">
        <item name="android:height">40dp</item>
        <item name="android:textColor">#252837</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/sans_b</item>
    </style>

    <!--생년월일-->
    <style name="birth_picker">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">#2B65E3</item>
    </style>



    <!--클럽_new-->

    <!--메인 타이틀-->
    <style name="club_new_title">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/sans_b</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#252837</item>
        <item name="android:layout_marginBottom">-5dp</item>
        <item name="android:gravity">center</item>
    </style>
    <!--클럽 Linear 백그라운드-->
    <style name="club_new_top">
        <item name="android:background">#ffffff</item>
    </style>
    <!--클럽 인풋창-->
    <style name="club_new_edittext">
        <item name="android:textColorHint">#B5B5B5</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
        <item name="android:textColor">#252837</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">20</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!--클럽 소제목 텍스트-->
    <style name="club_new_text">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/sans_b</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <!--클럽 소제목 텍스트_지도-->
    <style name="club_new_text_location">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/sans_b</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <!--지도검색 에디트텍스트 -->
    <style name="club_new_location_editText">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/serif_r</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawableRight">@drawable/ic_location</item>
        <item name="android:layout_marginTop">-20dp</item>
        <item name="android:editable">false</item>
        <item name="android:colorAccent" tools:ignore="NewApi">#6981EC</item>
    </style>

    <!--지도페이지 인풋창 -->
    <style name="map_location">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/serif_r</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawableRight">@drawable/map_icon</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginTop">-20dp</item>
        <item name="android:editable">false</item>
        <item name="android:colorAccent" tools:ignore="NewApi">#6981EC</item>
    </style>

    <!--지도페이지 지도 인풋 -->
    <style name="map_location_no">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/serif_r</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">-20dp</item>
    </style>


    <!--메인-->
    <!--백그라운드-->
    <style name="main_top_bg">
        <item name="android:background">#ffffff</item>
    </style>

    <!--프레그먼트 메뉴-->
    <style name="main_top_menu">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/serif_b</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <!--프레그먼트 본문 백그라운드-->
    <style name="main_body_bg">
        <item name="android:background">#2A2E43</item>
    </style>

    <!--프레그먼트 본문 제목-->
    <style name="main_body_title">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/serif_b</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>



</resources>
