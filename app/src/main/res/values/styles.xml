<resources xmlns:tools="http://schemas.android.com/tools">

    <!--메인 타이틀-->
    <style name="main_title">
        <item name="android:text">너\u0026무</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/serif_b</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginTop">-30dp</item>
        <item name="android:layout_marginBottom">-30dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--인풋창(에딧텍스트) 기본-->
    <style name="main_edittext">
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
        <item name="android:textColor">#252837</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">10</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!--링크 텍스트-->
    <style name="main_linkText">
        <item name="android:text">회원이 아니신가요? JOIN</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/sans_b</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:autoLink">none</item>
        <item name="android:linksClickable">true</item>
        <item name="android:onClick"></item>
    </style>

    <!--버튼 로그인-->
    <style name="main_loginBtn">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/sans_r</item>
        <item name="android:height">50dp</item>
        <item name="android:text">로  그  인</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
