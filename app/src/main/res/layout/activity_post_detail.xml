                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:hint="문의글을 달아주세요"
                android:maxLines="1"
                android:textColor="#000000"
                android:textColorHint="#B5B5B5" />

