<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#012038"
    android:orientation="vertical"
    tools:context=".app.club.Club_New_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!--상단영역-->
            <LinearLayout
                style="@style/club_new_top"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/club_new_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="모임 만들기" />

                <EditText
                    android:id="@+id/club_title"
                    style="@style/club_new_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/round_club"
                    android:textSize="12sp"
                    android:hint="모임명을 입력해주세요" />

            </LinearLayout>

            <!--본문 시작-->

            <!--지도 검색-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:orientation="vertical">

                <TextView
                    style="@style/club_new_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location" />

                <EditText
                    android:id="@+id/club_location_text"
                    style="@style/club_new_location_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="#7161FA"
                    android:gravity="left"
                    android:hint="모임장소"
                    android:textSize="12sp"
                    android:text="" />

            </LinearLayout>


            <!--카테고리-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="vertical">

                <TextView
                    style="@style/club_new_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category" />

                <RadioGroup
                    android:id="@+id/radio_category1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"

                    >


                    <RadioButton
                        android:id="@+id/check_club_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/xml_background"
                        android:button="@drawable/xml_button"
                        android:checked="true"
                        android:text="사진"
                        android:layout_weight="1"
                        android:textColor="#252837" />


                    <RadioButton
                        android:id="@+id/check_club_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/xml_background"
                        android:button="@drawable/xml_button"
                        android:text="스포츠"
                        android:layout_weight="1"
                        android:textColor="#252837" />

                    <RadioButton
                        android:id="@+id/check_club_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/xml_background"
                        android:button="@drawable/xml_button"
                        android:text="문화공연"
                        android:layout_weight="1"
                        android:textColor="#252837" />

                    <RadioButton
                        android:id="@+id/check_club_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/xml_background"
                        android:button="@drawable/xml_button"
                        android:text="독서"
                        android:layout_weight="1"
                        android:textColor="#252837" />


                </RadioGroup>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/radio_category2"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/check_club_5"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/xml_background"
                        android:button="@drawable/xml_button"
                        android:text="게임"
                        android:textColor="#252837" />


                    <RadioButton
                        android:id="@+id/check_club_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/xml_background"
                        android:button="@drawable/xml_button"
                        android:text="사교"
                        android:textColor="#252837" />

                    <RadioButton
                        android:id="@+id/check_club_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/xml_background"
                        android:button="@drawable/xml_button"
                        android:text="반려동물"
                        android:textColor="#252837" />

                    <RadioButton
                        android:id="@+id/check_club_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/xml_background"
                        android:button="@drawable/xml_button"
                        android:text="기타"
                        android:textColor="#252837" />

                </RadioGroup>


                <!--배경 이미지-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/club_new_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Background" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:src="@drawable/bg"
                        android:background="@drawable/img_box" />

                </LinearLayout>


                <!--시간 날짜 선택-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/club_new_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Time/Date" />

                        <TextView
                            android:id="@+id/club_new_date_text"
                            style="@style/club_new_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="2019.01.01"
                            android:textColor="#484E6A" />

                        <TextView
                            android:id="@+id/club_new_time_text"
                            style="@style/club_new_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="13:00"
                            android:textColor="#484E6A" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/club_new_date_btn"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:background="@drawable/round_price_btn2"
                            android:text="날짜 선택"
                            android:textColor="#B5B5B5" />

                        <Button
                            android:id="@+id/club_new_time_btn"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/round_price_btn2"
                            android:text="시간 선택"
                            android:textColor="#B5B5B5" />

                    </LinearLayout>


                </LinearLayout>




                <!--가격대-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/club_new_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Price" />

                        <TextView
                            android:id="@+id/club_new_price_text"
                            style="@style/club_new_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="0"
                            android:textColor="#484E6A" />

                        <TextView
                            style="@style/club_new_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="만원"
                            android:textColor="#484E6A" />

                    </LinearLayout>


                    <com.michaelmuenzer.android.scrollablennumberpicker.ScrollableNumberPicker
                        android:id="@+id/numberPicker"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/round_price_btn2"
                        app:snp_buttonPaddingLeft="30dp"
                        app:snp_buttonPaddingRight="30dp"
                        app:snp_maxValue="100000"
                        app:snp_minValue="10000"
                        app:snp_stepSize="10000"
                        app:snp_updateInterval="100" />

                </LinearLayout>


                <!--소개-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <TextView

                        style="@style/club_new_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Introduce" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <EditText
                        android:id="@+id/club_new_intro"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/round_club_intro"
                        android:gravity="center"
                        android:hint="소개글을 적어주세요 (20자)"
                        android:textSize="14sp"
                        android:maxLines="3"
                        android:maxLength="20"
                        />

                </LinearLayout>

                <Button
                    android:id="@+id/club_new_btn"
                    style="@style/main_loginBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/yellow_btn"
                    android:text="모임 만들기" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>